<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_window"
    tools:context=".PopActivity">

    <ScrollView
        android:layout_width="298dp"
        android:layout_height="409dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/WHAT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WHAT IS VENTILATION APP?"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="421dp"
                android:layout_height="60dp"
                android:text="It’s an app that allows the doctor to simulate interaction with a lung ventilator."
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.58000004" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HOW DOES IT WORK?"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You need to set the parameters of the patient, scrolling the menu and filling the spaces. \nThen do the same thing for the ventilator’s parameters. \nThe simulation will show you 2 graphs: volume and flow, taken during both expiratory and inspiratory phases.  \nA traffic light will display if you are doing correctly.                                                 RED LIGHT= You have to change parameters \nYELLOW LIGHT= You are near to the right solution \nGREEN LIGHT= You are right! You are near the OPTIMUM"
                android:textSize="20sp" />" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>