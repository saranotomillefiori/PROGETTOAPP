<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_ventilator"
    tools:context=".PopActivityVentilator">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="283dp"
        android:layout_height="495dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="154dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="377dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextPEEP"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:ems="10"
                    android:hint="PEEP"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editTextfio2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:ems="10"
                    android:hint="FiO2"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editTextpmax"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:ems="10"
                    android:hint="Pmax"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editTextVM"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:ems="10"
                    android:hint="%VM"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editTextVMAX"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:ems="10"
                    android:hint="V Max"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editTextMinVolume"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:ems="10"
                    android:hint="MinVolume"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editTextIE"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:ems="10"
                    android:hint="I/E"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editTextRR"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:ems="10"
                    android:hint="Respiratory Rate"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/saveventilator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="getResult"
                    android:backgroundTint="#0004FF"
                    android:textSize="16sp"
                    android:text="SAVE" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="361dp"
        android:layout_height="38dp"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:text="VENTILATOR PARAMETERS"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>